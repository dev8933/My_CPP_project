{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always", // Enables colored output for errors/warnings
                "-g",                         // Includes debugging information
                "${file}",                    // The current file being compiled
                "-o",                         // Specifies the output file
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Output file name (same as source file name but with .exe)
            ],
            "options": {
                "cwd": "${fileDirname}"       // Sets the current working directory to the folder containing the source file
            },
            "problemMatcher": [
                "$gcc"                        // Matches GCC-style errors/warnings for display in VS Code Problems tab
            ],
            "group": {
                "kind": "build",              // Groups this task under Build tasks in VS Code
                "isDefault": true             // Makes this the default build task
            },
            "detail": "Task generated by Debugger." // Optional description for clarity
        }
    ]
}
